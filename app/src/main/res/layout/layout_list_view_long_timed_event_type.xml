<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">


    <TextView
        android:id="@+id/eventATitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/swapImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_swap_horiz_24"
        app:layout_constraintTop_toBottomOf="@id/eventATitleTextView"
        app:layout_constraintStart_toStartOf="@id/eventATitleTextView"
        app:layout_constraintEnd_toEndOf="@id/eventATitleTextView"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/swap_image"
        app:tint="@color/black"
        />

    <TextView
        android:id="@+id/eventBTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/swapImageView"
        app:layout_constraintStart_toStartOf="@id/eventATitleTextView"
        android:layout_marginTop="8dp"
        />

    <CheckBox
        android:id="@+id/activeEventTypeCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activeCheckboxLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/active"
        app:layout_constraintBottom_toBottomOf="@+id/activeEventTypeCheckBox"
        app:layout_constraintEnd_toStartOf="@+id/activeEventTypeCheckBox"
        app:layout_constraintTop_toTopOf="@+id/activeEventTypeCheckBox" />


</androidx.constraintlayout.widget.ConstraintLayout>