<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/playerNameLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/playerNameLbl_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:labelFor="@id/playerNameEditText"
        android:layout_margin="16dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/playerNameEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/playerNameLbl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:inputType="text"
        android:autofillHints="player name"/>

    <TextView
        android:id="@+id/playerNumberLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/playerNameEditText"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/playerNumberLbl_text"
        android:layout_margin="16dp"
        android:labelFor="@id/playerNumberEditText"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/playerNumberEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/playerNumberLbl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:inputType="number"
        android:autofillHints="jersey number"
        />

    <TextView
        android:id="@+id/playerTeamLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/playerNumberEditText"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/team"
        android:layout_margin="16dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/playerTeamContentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/playerTeamLbl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>